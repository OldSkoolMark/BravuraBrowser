<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

     <ListPreference
        android:key="font_name"
        android:title="@string/pref_font_title"
        android:entries="@array/pref_font_entries"
        android:entryValues="@array/pref_font_entry_values"
        android:defaultValue="@string/bravura"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

     <ListPreference
        android:key="grid_font_size"
        android:title="@string/pref_grid_view_title"
        android:entries="@array/pref_grid_view_titles"
        android:entryValues="@array/pref_grid_view_values"
        android:defaultValue="64.0f"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="detail_font_size"
        android:title="@string/pref_detail_view_title"
        android:entries="@array/pref_detail_view_titles"
        android:entryValues="@array/pref_detail_view_values"
        android:defaultValue="128.0f"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />


</PreferenceScreen>
